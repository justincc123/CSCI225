js

// *************************************************
//   Georgia Power Bill Calculator - Assignment 5
//   Author: Justin Coleman
//   Based on Lecture 9 & 10 JavaScript examples
// *************************************************

// register event handler for calculate button
document.getElementById("calculate").addEventListener("click", calculateBill, false);

// function to calculate the power bill
function calculateBill() {

    // get user input
    var usage = parseFloat(document.getElementById("usage").value);
    var days = parseFloat(document.getElementById("days").value);
    var tax = parseFloat(document.getElementById("tax").value);
    var city = document.querySelector("input[name='city']:checked").value;
    var season = document.querySelector("input[name='season']:checked").value;

    // validate input
    if (isNaN(usage) || isNaN(days) || isNaN(tax)) {
        alert("Please enter valid numbers for usage, days, and tax rate.");
        return;
    }

    // base charge
    var baseCharge = 0.4603 * days;

    // tier calculations
    var tier1 = 0, tier2 = 0, tier3 = 0;

    if (season === "Summer") {
        if (usage <= 650)
            tier1 = usage * 0.066678;
        else if (usage <= 1000) {
            tier1 = 650 * 0.066678;
            tier2 = (usage - 650) * 0.110748;
        }
        else {
            tier1 = 650 * 0.066678;
            tier2 = 350 * 0.110748;
            tier3 = (usage - 1000) * 0.114625;
        }
    }
    else { // Winter
        tier1 = usage * 0.062404;
    }

    // compute base revenue
    var baseRevenue = baseCharge + tier1 + tier2 + tier3;

    // additional cost riders
    var fuelCost = usage * (season === "Summer" ? 0.045876 : 0.042859);
    var demandSide = baseRevenue * 0.015989;
    var nuclear = baseRevenue * 0.041562;
    var environmental = baseRevenue * 0.162813;

    // total revenue
    var totalRevenue = baseRevenue + fuelCost + demandSide + nuclear + environmental;

    // franchise fee
    var franchiseFee = totalRevenue * (city === "Inside" ? 0.030674 : 0.011839);

    // totals
    var totalBeforeTax = totalRevenue + franchiseFee;
    var finalTotal = totalBeforeTax * (1 + tax / 100);

    // if total exceeds $500, open georgia power page
    if (finalTotal > 500) {
        window.open("https://www.georgiapower.com/residential/save-money-and-energy/products-programs.html");
    }

    // display results
    var resultHTML = "<h3>Bill Summary</h3>";
    resultHTML += "Base Charge: $" + baseCharge.toFixed(2) + "<br>";
    resultHTML += "Tier 1: $" + tier1.toFixed(2) + "<br>";
    resultHTML += "Tier 2: $" + tier2.toFixed(2) + "<br>";
    resultHTML += "Tier 3: $" + tier3.toFixed(2) + "<br>";
    resultHTML += "<strong>Base Revenue:</strong> $" + baseRevenue.toFixed(2) + "<br><br>";
    resultHTML += "Fuel Cost Rider: $" + fuelCost.toFixed(2) + "<br>";
    resultHTML += "Demand Side: $" + demandSide.toFixed(2) + "<br>";
    resultHTML += "Nuclear: $" + nuclear.toFixed(2) + "<br>";
    resultHTML += "Environmental: $" + environmental.toFixed(2) + "<br>";
    resultHTML += "<strong>Total Revenue:</strong> $" + totalRevenue.toFixed(2) + "<br><br>";
    resultHTML += "Franchise Fee: $" + franchiseFee.toFixed(2) + "<br>";
    resultHTML += "<strong>Total Before Tax:</strong> $" + totalBeforeTax.toFixed(2) + "<br>";
    resultHTML += "<strong>Final Total (After Tax):</strong> $" + finalTotal.toFixed(2);

    document.getElementById("results").innerHTML = resultHTML;
}
